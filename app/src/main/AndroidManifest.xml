<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yurry.typicodeforum">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_app_circle"
        android:supportsRtl="true"
        android:theme="@style/Theme.TypicodeForum"
        tools:ignore="AllowBackup">
        <activity android:name=".ui.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.view.DetailPostActivity"/>
        <activity android:name=".ui.view.DetailUserActivity" />
        <activity android:name=".ui.view.DetailPhotoActivity" />
        <activity android:name=".ui.view.DetailAlbumActivity" />
    </application>

</manifest>